# Git Aliases
alias gs="git status"
alias gc="git commit -S -m"
alias gce="git commit -S -a --amend"
alias gcee="git commit -S -a --amend --no-edit"
alias ga="git add"
alias gaa="git add -A"
alias gap="git add -p"
alias gca="git commit -S -am"
alias gpull="git pull"
alias gd="git diff"
alias gl="git log"
alias greup="git fetch origin main:main && git rebase main"
alias gst="git stash"
alias gch="git checkout"
# default git to git status if there's no args
function g() {
    if [[ -z "${*//[[:space:]]/}" ]]; then
        git status
    else
        git "$@"
    fi
}

# Tmux
alias tkill="tmux kill-session -t"
alias tlist="tmux list-sessions"
alias tattach="tmux attach"
alias ta="tattach"

# eza/ls
alias ls="eza -ax  --icons"
alias ll="eza -albh --icons --git"
alias lr="eza -TL 3 --icons"
