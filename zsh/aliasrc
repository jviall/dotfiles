# Git Aliases
alias g ="git"
alias gs="git status"
alias gc="git commit -S -m"
alias ga="git add"
alias gaa="git add ."
alias gca="git commit -S -am"
# default git to git status if there's no args
function g() {
    if [[ -z "${*//[[:space:]]/}" ]]; then
        git status
    else
        git "$@"
    fi
}
